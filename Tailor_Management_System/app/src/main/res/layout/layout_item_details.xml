<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/newOrderDetailsItemDetailsTextViewItemName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/newOrderDetailsItemDetailsTextViewItemNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/newOrderDetailsItemDetailsTextViewItemName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/newOrderDetailsItemDetailsTextViewItemName" />

    <TextView
        android:id="@+id/newOrderDetailsItemDetailsTextViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/newOrderDetailsItemDetailsTextViewItemCost"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/newOrderDetailsItemDetailsTextViewItemNo"
        app:layout_constraintTop_toTopOf="@+id/newOrderDetailsItemDetailsTextViewItemCost" />

    <TextView
        android:id="@+id/newOrderDetailsItemDetailsTextViewItemCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/newOrderDetailsItemDetailsTextViewItemName"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>